<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_15dp"
    android:paddingRight="@dimen/dimen_15dp"
    android:paddingTop="@dimen/dimen_8dp"
    android:paddingBottom="@dimen/dimen_8dp"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/item_news_bg"
        android:padding="@dimen/dimen_10dp">


        <TextView
            android:id="@+id/item_news_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/size_15sp"
            android:textStyle="bold"
            android:text="大家覅送到附近欧斯的加法计算的，就粉丝都就覅收到积分飓风桑迪"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/item_news_car1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_100dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dimen_2dp"
                app:cardCornerRadius="@dimen/dimen_5dp">

                <ImageView
                    android:id="@+id/item_news_img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/bg_defualt_220x150"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/item_news_car2"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_100dp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/dimen_5dp"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:layout_marginRight="@dimen/dimen_2dp">

                <ImageView
                    android:id="@+id/item_news_img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/bg_defualt_220x150"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item_news_car3"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_100dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen_2dp"
                app:cardCornerRadius="@dimen/dimen_5dp">

                <ImageView
                    android:id="@+id/item_news_img3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/bg_defualt_220x150"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_news_imgHeader"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_weight="1"
                android:src="@mipmap/topic_user_default"/>

            <TextView
                android:id="@+id/item_news_tv_source"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="新浪微博fdsfsdfsdfsdfsdfsdfsdfsdffsdf"
                android:ellipsize="end"
                android:lines="1"
                android:gravity="left"
                android:drawablePadding="@dimen/dimen_10dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/size_13sp"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/item_news_tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_alignParentRight="true"
                android:text="2022-05-15-13:15:49"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:layout_weight="5"
                android:textSize="@dimen/size_13sp"
                android:textColor="@color/grey"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>