<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dimen_10dp"
    android:layout_marginLeft="@dimen/dimen_10dp"
    android:layout_marginTop="@dimen/dimen_10dp"
    app:contentPadding="@dimen/dimen_10dp"
    app:cardCornerRadius="@dimen/dimen_15dp"
    app:cardBackgroundColor="@color/colorPink"
    app:cardElevation="@dimen/dimen_1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_localMusic_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/size_25sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/item_localMusic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_localMusic_num"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:textSize="@dimen/size_20sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"/>

        <LinearLayout
            android:id="@+id/item_localMusic_lin"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_localMusic_num"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_below="@+id/item_localMusic_name">

            <TextView
                android:id="@+id/item_localMusic_Ashley"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_localMusic_num"
                android:layout_below="@id/item_localMusic_name"
                android:textSize="@dimen/size_16sp"
                android:ellipsize="end"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/item_localMusic_fuhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_below="@+id/item_localMusic_name"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_toRightOf="@+id/item_localMusic_Ashley"
                android:textSize="@dimen/size_16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/item_localMusic_dvd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_localMusic_name"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_toRightOf="@+id/item_localMusic_fuhao"
                android:textSize="@dimen/size_16sp"
                android:ellipsize="end"
                android:singleLine="true"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_localMusic_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_localMusic_lin"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/size_16sp"
            android:text="00:00"
            android:textStyle="bold"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>