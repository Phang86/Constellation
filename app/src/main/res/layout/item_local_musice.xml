<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dimen_15dp"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        app:cardCornerRadius="@dimen/dimen_10dp"
        app:cardBackgroundColor="#FAD0D8"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10dp">
            <TextView
                android:id="@+id/item_localMusic_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/yaBlack"
                android:textSize="@dimen/size_18sp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/item_localMusic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_localMusic_num"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:textSize="@dimen/size_16sp"
                android:singleLine="true"
                android:ellipsize="end"/>

            <LinearLayout
                android:id="@+id/item_localMusic_lin"
                android:layout_width="@dimen/dimen_250dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_localMusic_num"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_below="@+id/item_localMusic_name">

                <TextView
                    android:id="@+id/item_localMusic_Ashley"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/item_localMusic_num"
                    android:layout_below="@id/item_localMusic_name"
                    android:textSize="@dimen/size_15sp"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/item_localMusic_fuhao"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="|"
                    android:layout_below="@+id/item_localMusic_name"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_toRightOf="@+id/item_localMusic_Ashley"
                    android:textSize="@dimen/size_16sp"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/item_localMusic_dvd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_localMusic_name"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_toRightOf="@+id/item_localMusic_fuhao"
                    android:textSize="@dimen/size_15sp"
                    android:ellipsize="end"
                    android:singleLine="true"/>
            </LinearLayout>

            <TextView
                android:id="@+id/item_localMusic_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/item_localMusic_lin"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/size_14sp"
                android:text="00:00"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
