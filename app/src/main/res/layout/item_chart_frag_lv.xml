<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/state_bg_f4f3f8"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="@dimen/dimen_15dp"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            app:cardCornerRadius="@dimen/dimen_8dp"
            app:cardElevation="@dimen/dimen_0dp"
            app:cardMaxElevation="@dimen/dimen_0dp"
            android:foreground="@drawable/view_foreground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/item_chart_frag_img_title"
                        android:layout_width="@dimen/dimen_25dp"
                        android:layout_height="@dimen/dimen_25dp"
                        android:src="@drawable/ic_jiaotong_fs"
                        />

                    <TextView
                        android:id="@+id/item_chart_frag_tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="交通"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:textColor="@color/black_200"
                        android:textSize="@dimen/size_15sp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_chart_frag_tv_ratio"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_200"
                    android:layout_weight="1"
                    android:text="100%"
                    android:gravity="center"
                    android:textSize="@dimen/size_15sp"
                    />

                <TextView
                    android:id="@+id/item_chart_frag_tv_money"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="￥15.2"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_200"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="@dimen/size_15sp"
                    />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
</RelativeLayout>