<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/state_bg_f4f3f8"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_15dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginBottom="@dimen/dimen_5dp"
        app:cardElevation="@dimen/dimen_0dp"
        app:cardMaxElevation="@dimen/dimen_0dp"
        android:foreground="@drawable/view_foreground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/tally_item_lv_tv_outOrIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_14sp"
                android:text="来源：支出"
                android:textStyle="italic"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginTop="@dimen/dimen_5dp">

                <RelativeLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <LinearLayout
                        android:id="@+id/left_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:id="@+id/tally_item_lv_img"
                            android:layout_width="@dimen/dimen_30dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:layout_centerVertical="true"/>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/tally_item_lv_tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/left_layout"
                        android:text="购物"
                        android:singleLine="true"
                        android:textSize="@dimen/size_17sp"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:textColor="@color/black_200"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/tally_item_lv_tv_beizhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tally_item_lv_tv_title"
                        android:layout_toRightOf="@+id/left_layout"
                        android:text="买了一条毛巾、洗发水,买了一条毛巾、洗发水fsdfsdfdfsdfsdfdsfsd"
                        android:singleLine="true"
                        android:textSize="@dimen/size_15sp"
                        android:layout_marginRight="@dimen/dimen_5dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tally_item_lv_tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="￥30.8"
                        android:textSize="@dimen/size_17sp"
                        android:gravity="right"
                        android:singleLine="true"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:textStyle="bold"
                        android:textColor="#EC2F21"/>

                    <TextView
                        android:id="@+id/tally_item_lv_tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tally_item_lv_tv_money"
                        android:text="fsdfsdfsdfsdfdsffdsfsdfsdffsdfs"
                        android:textSize="@dimen/size_15sp"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/dimen_5dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>