<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bgyellow">
    <TextView
        android:id="@+id/luck_details_lv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="沃尔克的"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/partnership_man_bg"
        android:textSize="@dimen/size_16sp"/>

    <TextView
        android:id="@+id/luck_details_lv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="@string/partnership_info"
        android:background="@drawable/footer_tv_bg"
        android:padding="@dimen/dimen_10dp"
        android:textSize="@dimen/size_15sp"/>
</LinearLayout>