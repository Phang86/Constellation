<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_5dp">


    <TextView
        android:id="@+id/item_center_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_14sp"
        android:layout_centerVertical="true"
        android:textColor="@color/gray_600"
        android:lines="1"
        android:text="周六"/>

    <TextView
        android:id="@+id/item_center_tv_con"
        android:layout_width="@dimen/dimen_90dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/size_14sp"
        android:gravity="center"
        android:text="晴天天天天天津啊踢啊"
        android:textColor="@color/gray_600"
        android:layout_toRightOf="@+id/item_center_tv_date"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/item_center_tv_wind"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_14sp"
        android:gravity="center"
        android:textColor="@color/gray_600"
        android:text="南风转北风"
        android:layout_toRightOf="@id/item_center_tv_con"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/item_center_tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_14sp"
        android:textColor="@color/gray_600"
        android:layout_centerVertical="true"
        android:text="9~15℃"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_below="@id/item_center_tv_wind"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/dimen_10dp"/>

</RelativeLayout>