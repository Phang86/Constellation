<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/item_feedback_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_13sp"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_8dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/item_feedback_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_10dp"
        app:contentPadding="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:layout_marginBottom="@dimen/dimen_5dp"
        app:cardElevation="@dimen/dimen_0dp"
        app:cardMaxElevation="@dimen/dimen_0dp"
        android:foreground="@drawable/view_foreground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textSize="@dimen/size_14sp"-->
<!--                android:gravity="center"-->
<!--                android:text="我的反馈"-->
<!--                android:textColor="@color/black"-->
<!--                android:textStyle="bold"-->
<!--                />-->

<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="1px"-->
<!--                android:background="@color/black"-->
<!--                android:layout_marginTop="@dimen/dimen_5dp"-->
<!--                android:layout_marginBottom="@dimen/dimen_10dp"/>-->

            <TextView
                android:id="@+id/item_feedback_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_13sp"
                android:textColor="@color/grey"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_5dp"
                />

            <TextView
                android:id="@+id/item_feedback_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                />

            <TextView
                android:id="@+id/item_feedback_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginTop="@dimen/dimen_3dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>