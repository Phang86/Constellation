<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/state_bg"
    android:paddingTop="@dimen/dimen_10dp"
    android:paddingBottom="@dimen/dimen_10dp"
    android:paddingLeft="@dimen/dimen_20dp"
    android:paddingRight="@dimen/dimen_10dp">

    <ImageView
        android:id="@+id/header_close"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_close"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_close"
        android:layout_marginTop="@dimen/dimen_5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/header_layout_cirImg"
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="@dimen/dimen_90dp"
            app:civ_border_width="@dimen/dimen_2dp"
            app:civ_border_color="@color/zhuBlue"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/header_layout_cirImg"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/header_layout_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_18sp"
                android:textColor="@color/black_200"
                android:textStyle="bold"
                android:text="penghang"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_gexing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                app:cardCornerRadius="@dimen/dimen_8dp"
                app:cardMaxElevation="@dimen/dimen_0dp"
                app:cardElevation="@dimen/dimen_0dp"
                android:foreground="@drawable/view_foreground"
                >

                <TextView
                    android:id="@+id/tv_gexing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/dimen_8dp"
                    android:paddingRight="@dimen/dimen_8dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:textStyle="normal"
                    android:textColor="@color/gray_600"
                    android:textSize="@dimen/size_13sp"
                    />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/dimen_0dp"
                    app:cardMaxElevation="@dimen/dimen_0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/dimen_8dp">

                    <TextView
                        android:id="@+id/tv_ip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_12sp"
                        android:paddingLeft="@dimen/dimen_8dp"
                        android:paddingRight="@dimen/dimen_8dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:textStyle="normal"
                        android:textColor="@color/gray_600"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    app:cardElevation="@dimen/dimen_0dp"
                    app:cardMaxElevation="@dimen/dimen_0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/dimen_8dp"
                    android:foreground="@drawable/view_foreground">

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_12sp"
                        android:paddingLeft="@dimen/dimen_8dp"
                        android:paddingRight="@dimen/dimen_8dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:textColor="@color/gray_600"
                        />

                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>