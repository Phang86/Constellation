<?xml version="1.0" encoding="utf-8"?>

<com.yyzy.constellation.tally.util.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/state_bg_f4f3f8"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_10dp">

        <LinearLayout
            android:id="@+id/ll_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_12dp"
            >

            <TextView
                android:id="@+id/item_login_info_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_13sp"
                />

            <TextView
                android:id="@+id/item_login_info_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_13sp"/>

            <TextView
                android:id="@+id/item_login_info_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_13sp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="非本人操作，请立即前往修改密码。"
                    android:textColor="@color/black_200"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textSize="@dimen/size_14sp"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/item_login_info_update_pwd"
                    />

                        <TextView
                            android:id="@+id/item_login_info_update_pwd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/updatePwd"
                            android:textSize="@dimen/size_14sp"
                            android:paddingLeft="@dimen/dimen_7dp"
                            android:paddingRight="@dimen/dimen_7dp"
                            android:paddingTop="@dimen/dimen_3dp"
                            android:paddingBottom="@dimen/dimen_3dp"
                            android:background="@drawable/search_tvbtn_bg"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            />

            </RelativeLayout>

        </LinearLayout>

<!--        <CheckBox-->
<!--            android:id="@+id/item_login_info_cb"-->
<!--            android:layout_marginRight="@dimen/dimen_10dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_width="@dimen/dimen_0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:visibility="gone"-->
<!--            android:focusableInTouchMode="false"-->
<!--            android:layout_weight="1"-->
<!--            />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_10dp">

<!--        <TextView-->
<!--            android:id="@+id/item_login_info_update_pwd"-->
<!--            android:layout_width="@dimen/dimen_90dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:foreground="@drawable/view_foreground"-->
<!--            android:background="#FD7629"-->
<!--            android:gravity="center"-->
<!--            android:text="修改密码"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="@dimen/size_15sp"-->
<!--            android:textStyle="bold"-->
<!--            />-->

        <TextView
            android:id="@+id/item_login_info_tv_del"
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="match_parent"
            android:foreground="@drawable/view_foreground"
            android:background="#F64242"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/size_15sp"
            android:textStyle="bold"
            />



    </LinearLayout>


</com.yyzy.constellation.tally.util.SwipeItemLayout>