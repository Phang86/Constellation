<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/dimen_0dp"
        app:cardMaxElevation="@dimen/dimen_0dp"
        app:cardCornerRadius="@dimen/dimen_20dp"
        android:layout_margin="@dimen/dimen_15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_15dp">


                <TextView
                    android:id="@+id/outInInfo_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/addBeizhu"
                    android:textSize="@dimen/size_17sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/outInInfo_tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:textIsSelectable="true"
                    android:text="@string/addBeizhu"/>



                <TextView
                    android:id="@+id/outInInfo_tv_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:textIsSelectable="true"
                    android:text="@string/addBeizhu"/>



                <TextView
                    android:id="@+id/outInInfo_tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:textIsSelectable="true"
                    android:text="@string/addBeizhu"/>


                <TextView
                    android:id="@+id/outInInfo_tv_beizhuInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:textIsSelectable="true"
                    android:text="@string/addBeizhu"/>
            </LinearLayout>

            <Button
                android:id="@+id/outInInfo_btn_ok"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45dp"
                android:background="@null"
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/HW_Blue"
                android:text="@string/ok"
                android:textStyle="bold"
                android:foreground="@drawable/view_foreground"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>