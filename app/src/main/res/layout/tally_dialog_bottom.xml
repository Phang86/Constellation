<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_20dp"
    android:layout_margin="@dimen/dimen_15dp"
    app:cardElevation="@dimen/dimen_0dp"
    app:cardMaxElevation="@dimen/dimen_0dp"
    app:cardBackgroundColor="@color/state_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tally_dialog_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setbeizhu"
                android:textColor="@color/gray_600"
                android:textSize="@dimen/size_17sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tally_dialog_tv_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/grey"
                android:layout_marginRight="@dimen/dimen_15dp"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/tally_dialog_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/inputHintBiezhu"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:textColorHint="@color/gray_500"
            android:maxLength="60"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:textStyle="bold"
            android:textColor="@color/black">
            <requestFocus/>
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp">


            <TextView
                android:id="@+id/tally_dialog_btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:text="@string/smssdk_cancel"
                android:layout_weight="1"
                android:background="@drawable/selector_register_btn"
                android:textSize="@dimen/size_15sp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:textColor="@color/white"
                android:gravity="center"/>


            <TextView
                android:id="@+id/tally_dialog_btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:text="@string/smssdk_confirm"
                android:layout_weight="1"
                android:background="@drawable/selector_login_btn_bg"
                android:textSize="@dimen/size_15sp"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>