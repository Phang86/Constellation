<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_100dp"
    android:background="@drawable/left_right_radio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_30dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tally_dialog_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setbeizhu"
                android:textColor="@color/black_200"
                android:textSize="@dimen/size_17sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tally_dialog_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/smssdk_cancel"
                android:layout_weight="1"
                android:textSize="@dimen/size_15sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <EditText
            android:id="@+id/tally_dialog_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/inputHintBiezhu"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_15dp"
            android:textColorHint="@color/gray_500"
            android:maxLength="60"
            android:textSize="@dimen/size_15sp"
            android:textColor="@color/black">
            <requestFocus/>
        </EditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:background="@color/gray_200"/>

        <TextView
            android:id="@+id/tally_dialog_tv_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_gravity="right"
            android:text="100/400"
            android:layout_marginTop="@dimen/dimen_5dp"/>

        <TextView
            android:id="@+id/tally_dialog_btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:text="@string/smssdk_confirm"
            android:background="@drawable/selector_login_btn_bg"
            android:textSize="@dimen/size_15sp"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>