<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--app主题样式-->
    <style name="Theme.Constellation" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowLightStatusBar" tools:targetApi="q">true</item>
    </style>


    <style name="Login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlActivated">#C759D662</item>

        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <item name="android:windowFullscreen">true</item>
    </style>



    //全屏显示
    <style name="MyTheme" parent="Theme.Constellation">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <!--MainActivity控件样式-->
    <style name="main_rb">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textColor">@drawable/main_rbtxt</item>
        <item name="android:textSize">@dimen/size_12sp</item>
        <item name="android:gravity">center</item>
    </style>
    <!--weather包控件样式-->
    <style name="todayWeather">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_20sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="indexText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:drawablePadding">@dimen/dimen_5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="titleTvStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!--dict包/文字详解界面的各控件样式-->
    <style name="wordInfoTvStyle">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--dict包/成语详解界面的各控件样式-->
    <style name="chengyuInfoTvMax">
        <item name="android:layout_width">@dimen/dimen_40dp</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:background">@mipmap/ic_text_bg</item>
        <item name="android:padding">@dimen/dimen_5dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/size_25sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="chengyuInfoMin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
    </style>
    <style name="chengyuInfoTvleft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/chengyu_info_tv_bg</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_10dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_10dp</item>
    </style>
    <style name="chengyuInfoTvright">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_10dp</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>
    <!--dict包/设置界面的各控件样式-->
    <style name="setLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="setImgStyle">
        <item name="android:layout_width">@dimen/dimen_25dp</item>
        <item name="android:layout_height">@dimen/dimen_25dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_10dp</item>
    </style>
    <style name="setTvStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_200</item>
        <item name="android:textSize">@dimen/size_15sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="setViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1.5px</item>
        <item name="android:background">@color/grey</item>
    </style>
    <!--自定义ProgressDialog样式-->
    <style name="MyDialogStyle" parent="Theme.Constellation">
        <!--  背景透明  -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 实现背景笼罩效果 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--  weather包：更多设置字体样式  -->
    <style name="weatherMoreTv">
        <item name="android:textSize">@dimen/size_15sp</item>
        <item name="android:textColor">@color/black_200</item>
    </style>
    <!--  weather包：更多设置RadioButton样式 -->
    <style name="weatherMoreRadioBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimen_7dp</item>
        <item name="android:foreground">@drawable/view_foreground</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!--PartnershipFragment 三个Button样式-->
    <style name="frag_partnership">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/search_tvbtn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_10dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_10dp</item>
    </style>

    <!--tally_more_dialog CardView样式-->
    <style name="tally_morey_dialog_cv_style">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">@drawable/view_foreground</item>
        <item name="android:layout_marginBottom">@dimen/dimen_20dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_20dp</item>
        <item name="cardBackgroundColor">@color/gray_100_ededed</item>
        <item name="contentPadding">@dimen/dimen_10dp</item>
        <item name="cardMaxElevation">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/dimen_10dp</item>
    </style>

    <!--tally_more_dialog TextView样式-->
    <style name="tally_more_dialog_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dimen_5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/size_15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#242425</item>
    </style>

    <!--PopupWindow展现样式-->


    <!-- 圆形图片 -->
    <style name="circleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--圆形进度条-->
    <declare-styleable name="RoundProgressView">
        <attr name="radius" format="dimension"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="strokeColor" format="color"/>
    </declare-styleable>

</resources>